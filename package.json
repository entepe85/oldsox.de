{
    "name": "oldsox.de",
    "version": "1.0.0",
    "description": "Old Sox Landingpage",
    "main": "index.html",
    "repository": "",
    "author": "Nils Petersen <kontakt@entepe.de>",
    "license": "MIT",
    "dependencies": {
        "autoprefixer": "^6.5.3",
        "babel-cli": "^6.18.0",
        "babel-loader": "^6.3.2",
        "babel-preset-es2015": "^6.18.0",
        "browser-sync": "^2.18.2",
        "cssnano": "^3.10.0",
        "gsap": "^1.19.1",
        "imagemin-cli": "^3.0.0",
        "menuspy": "^1.0.1",
        "node-sass": "^3.13.0",
        "node-sass-cli": "^0.0.4",
        "normalize.css": "^7.0.0",
        "parallelshell": "^2.0.0",
        "postcss-cli": "^2.6.0",
        "postcss-import": "^9.1.0",
        "sass-lint": "^1.10.2",
        "uglify-js": "^2.7.5",
        "webpack": "^2.2.1"
    },
    "scripts": {
        "serve": "browser-sync start --server --index index.html --ss './' --files 'dist'",
        "sass:compile": "node-sass --source-comments true src/scss/style.scss dist/css/style.css",
        "sass:watch": "yarn sass:compile -- --watch",
        "autoprefix": "postcss --watch --use autoprefixer --use cssnano --use postcss-import dist/css/style.css -o dist/css/app.css",
        "imagemin": "imagemin src/img/* --out-dir=dist/img",
        "js:concat": "cat src/es6/modules/*.js > src/es6/app.js",
        "js:compile": "yarn js:concat && webpack && uglifyjs dist/js/bundle.js -mo dist/js/bundle.min.js",
        "js:watch": "yarn js:compile -- --watch",
        "build:watch": "node node_modules/parallelshell/index.js 'yarn serve' 'yarn sass:watch' 'yarn js:watch' 'yarn autoprefix'"
    }
}
